	<li><a href="{{request.contextPath}}/admin/index.html">首页</a></li>
	<li><a href="{{request.contextPath}}/admin/article.html">文章</a></li>
	<li class="active">{{#model}}编辑{{/model}}{{^model}}添加{{/model}}文章</li>
</ol>
